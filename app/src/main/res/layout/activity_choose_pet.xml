<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prontera2"
    tools:context=".ui.ChoosePet.ChoosePetActivity">


    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:paddingTop="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="50dp"
            android:text="EII PARADO, Você é novo por aqui?, precisa escolher um BitPet para Se defender nessa cidade cheia de perigos!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    </LinearLayout>


    <Button
        android:id="@+id/Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:text="Escolher"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:background="#FFEB3B"
        />

    <ImageView
        android:id="@+id/kafraImage"
        android:src="@drawable/kafra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>