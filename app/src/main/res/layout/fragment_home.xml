        android:id="@+id/petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="cocozinho"
        android:textColor="#FFE501"
        app:layout_constraintBottom_toTopOf="@+id/poring"
        app:layout_constraintRight_toRightOf="@+id/poring"
        app:layout_constraintLeft_toLeftOf="@+id/poring"
        />


