        app:layout_constraintBottom_toTopOf="@+id/poring"
        app:layout_constraintRight_toRightOf="@+id/poring"
        app:layout_constraintLeft_toLeftOf="@+id/poring"
        android:visibility="invisible"
        />

    <LinearLayout
